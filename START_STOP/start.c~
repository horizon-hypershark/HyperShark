#include<netinet/in.h> 
#include <sys/types.h> 
#include <sys/socket.h> 
#include<stdio.h> 
#include <arpa/inet.h> 
#include <string.h> 
#include<fcntl.h> 
int start_capture(char *path,char *interface,u_int32_t GFL,u_int16_t hash) 
{ 
	int sd,cd,no_char; 
	char buf[1000]="",str[100]=""; 
	struct sockaddr_in ser; 
	sd=socket(AF_INET,SOCK_STREAM,0); 
	if(sd<0) 
		printf("SOCKET NOT CREATED\n"); 
	bzero(&ser,sizeof(struct sockaddr_in)); 
	ser.sin_family=AF_INET; 
	ser.sin_port=htons(4444); 
	inet_aton("localhost",&ser.sin_addr); 
	connect(sd,(struct sockaddr *)&ser,sizeof(ser));
	no_char=sprintf(str,"%u %u %s %s",hash,GFL,interface,path);
		//send start signal
	write(sd,"START",6); 		
		//send hash+GFL+interface+path value
	write(sd,str,no_char+1);		
		//receive recomputed hash in case of collision
	read(sd,buf,1000);	
	close(sd);
	return atoi(buf); 
} 

int main()
{
	int hash=start_capture("media/STORAGE/storage/hs1234/","wlan0",0,36);
	printf("\nNew hash is:%d",hash);
}
